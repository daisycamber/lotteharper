SSH_KEY="ssh-rsa  daisy@daisys-laptop"
sudo adduser love
sudo usermod -aG sudo love
sudo su love
ssh-keygen
sudo echo $SSH_KEY >> ~/.ssh/authorized_keys
sudo chmod -R 744 ~/.ssh/
sudo chmod 600 ~/.ssh/id_rsa*
sudo chmod 744 ~/.ssh/id_rsa
sudo chmod 0700 ~/.ssh/authorized_keys
sudo chmod 0700 ~/.ssh/
sudo chmod 600 ~/.ssh/id_rsa
# set up ssh settings and ssh keys
# copy generated local ssh key to .ssh/authorized_keys
